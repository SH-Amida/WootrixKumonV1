<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_70"
            android:src="@drawable/wootrix_logo" />

        <LinearLayout
            android:layout_width="@dimen/edt_txt_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:background="@drawable/text_input">

            <EditText
                android:id="@+id/signup_screen_name_edtTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/lbl_name"
                android:inputType="textPersonName"
                android:padding="@dimen/margin_5"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/text_size_18">

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/edt_txt_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:background="@drawable/text_input">

            <EditText
                android:id="@+id/signup_screen_email_edtTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/lbl_email"
                android:inputType="textEmailAddress"
                android:padding="@dimen/margin_5"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/text_size_18"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/edt_txt_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:background="@drawable/text_input">

            <EditText
                android:id="@+id/signup_screen_pass_edtTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/lbl_pass"
                android:inputType="textPassword"
                android:padding="@dimen/margin_5"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/text_size_18"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/edt_txt_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_45"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:background="@drawable/text_input">

            <EditText
                android:id="@+id/signup_screen_confirmpass_edtTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/lbl_confirm_pass"
                android:inputType="textPassword"
                android:padding="@dimen/margin_5"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/text_size_18"></EditText>
        </LinearLayout>

        <Button
            android:id="@+id/signup_screen_signup_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@drawable/btn_login"
            android:text="@string/lbl_signup"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/text_size_22" />
    </LinearLayout>

    <TextView
        android:id="@+id/signup_screen_login_txtVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_25"
        android:text="@string/lbl_try_login"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/text_size_16" />

</LinearLayout>