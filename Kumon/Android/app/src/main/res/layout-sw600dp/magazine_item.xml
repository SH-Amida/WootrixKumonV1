<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/add_magazine_img_width"
        android:layout_height="@dimen/add_magazine_img_height"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin_10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/magazine_item_imageVw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/addnew_magazine" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/magazine_frame" />

        <TextView
            android:id="@+id/txt_deleteMagazine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:drawableTop="@drawable/delete"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/magazine_item_addnew_txtVw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/margin_5"
            android:drawableTop="@drawable/icon_addnew_magazine"
            android:gravity="center"
            android:padding="@dimen/margin_5"
            android:text="@string/add_magazines"
            android:textSize="@dimen/text_size_15"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>