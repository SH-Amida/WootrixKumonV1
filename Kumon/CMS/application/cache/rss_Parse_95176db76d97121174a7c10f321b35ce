        <item>
            <guid isPermaLink="false">tag:noria.com,2010-06-10:publishing:magazines:rp:7ea427c7-70aa-49fe-acd9-a0620098bcab</guid>
            <link>http://feedproxy.google.com/~r/noria/reliableplant/tags/root_cause_analysis/~3/7_GZ81tbmPw/start-reliability-program</link>
            <a10:author>
                <a10:name>Robert Apelgren</a10:name>
            </a10:author>
            <category>Web Exclusives</category>
