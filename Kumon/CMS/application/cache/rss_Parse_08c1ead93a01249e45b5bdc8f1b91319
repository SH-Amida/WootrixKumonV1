            <guid isPermaLink="false">tag:noria.com,2010-06-10:publishing:magazines:rp:67f74d47-6548-49d4-8c10-9d1e00d39f06</guid>
            <link>http://feedproxy.google.com/~r/noria/reliableplant/tags/bearings/~3/wHCxHT1F_Vk/coal-fired-power-plant-gearlife</link>
            <a10:author>
                <a10:name>Richard Winslow</a10:name>
            </a10:author>
            <a10:author>
                <a10:name>Ken Nicholas</a10:name>
            </a10:author>
