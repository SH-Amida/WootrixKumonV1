            <guid isPermaLink="false">tag:noria.com,2010-06-10:publishing:magazines:rp:7e1cd478-2f80-454c-b8bb-9cf800d9fa16</guid>
            <link>http://feedproxy.google.com/~r/noria/reliableplant/tags/bearings/~3/j7Mh2-37alQ/bearing</link>
            <a10:author>
                <a10:name>Noria Corporation</a10:name>
            </a10:author>
