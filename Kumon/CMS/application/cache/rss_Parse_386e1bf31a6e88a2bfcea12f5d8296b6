        <item>
            <guid isPermaLink="false">tag:noria.com,2010-06-10:publishing:magazines:rp:0baaad84-ef32-47b4-a7bd-9cf800da0d34</guid>
            <link>http://feedproxy.google.com/~r/noria/reliableplant/tags/infrared_thermography/~3/hmubuYL2TSc/nfpa70e-arc-flash-thermography</link>
            <a10:author>
                <a10:name>Billings</a10:name>
            </a10:author>
