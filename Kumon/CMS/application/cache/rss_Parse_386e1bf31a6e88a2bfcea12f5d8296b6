    &lt;td&gt;&lt;p align="center"&gt; 14 &lt;/p&gt;&lt;/td&gt;
  &lt;/tr&gt;
  &lt;tr&gt;
    &lt;td&gt;&lt;p align="center"&gt; 8.25 &lt;/p&gt;&lt;/td&gt;
    &lt;td&gt;&lt;p align="center"&gt; 6.5 &lt;/p&gt;&lt;/td&gt;
    &lt;td&gt;&lt;p align="center"&gt; 17 &lt;/p&gt;&lt;/td&gt;
  &lt;/tr&gt;
  &lt;tr&gt;
    &lt;td&gt;&lt;p align="center"&gt; 15.0 &lt;/p&gt;&lt;/td&gt;
