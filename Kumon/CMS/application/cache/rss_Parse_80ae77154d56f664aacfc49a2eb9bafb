		&lt;/tbody&gt;
		&lt;colgroup&gt;
			&lt;col style="padding-bottom: 2pt; padding-left: 5.4pt; padding-right: 5.4pt; padding-top: 0pt" /&gt;
			&lt;col style="padding-bottom: 2pt; padding-left: 5.4pt; padding-right: 5.4pt; padding-top: 0pt" /&gt;
