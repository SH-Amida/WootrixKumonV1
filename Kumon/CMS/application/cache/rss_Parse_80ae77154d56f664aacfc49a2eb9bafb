        <item>
            <guid isPermaLink="false">tag:noria.com,2010-06-10:publishing:magazines:rp:6bccbc20-0044-43ee-8290-a52a00daab80</guid>
            <link>http://feedproxy.google.com/~r/noria/reliableplant/tags/green_manufacturing/~3/n2hrLE9ZFXM/5-s-methods</link>
            <a10:author>
                <a10:name>Jordy Byrd</a10:name>
