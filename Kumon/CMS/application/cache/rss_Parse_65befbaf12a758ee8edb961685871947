        <item>
            <guid isPermaLink="false">tag:noria.com,2010-06-10:publishing:magazines:rp:bdd96978-b74f-4bae-999f-9cf800da15a5</guid>
            <link>http://feedproxy.google.com/~r/noria/reliableplant/tags/kaizen/~3/ESBaQT7nv7U/kaizen-planning</link>
            <a10:author>
                <a10:name>Mike Wroblewski</a10:name>
            </a10:author>
